service: waf
provider:
  name: aws
  deploymentBucket:
    name: sls.waf.us-east-1.aws.com
    blockPublicAccess: true

plugins:
  - serverless-deployment-bucket

custom:
  scope: CLOUDFRONT

resources:
  Resources:
    CloudFlareIpSet:
      Type: AWS::WAFv2::IPSet
      Properties:
        Description: CloudFlare ip blocks cidr
        Name: CloudFlareIPSet
        Scope: ${self:custom.scope}
        IPAddressVersion: IPV4
        Addresses:
          - 173.245.48.0/20
          - 103.21.244.0/22
          - 103.22.200.0/22
          - 103.31.4.0/22
          - 141.101.64.0/18
          - 108.162.192.0/18
          - 190.93.240.0/20
          - 188.114.96.0/20
          - 197.234.240.0/22
          - 198.41.128.0/17
          - 162.158.0.0/15
          - 104.16.0.0/12
          - 172.64.0.0/13
          - 131.0.72.0/22

    CloudFlareWebACL:
      DependsOn:
        - CloudFlareIpSet
      Type: AWS::WAFv2::WebACL
      Properties:
        Name: Only-CloudFlare-Allowed
        Scope: ${self:custom.scope}
        Description: CloudFlare WebACL Firewall
        DefaultAction:
          Block: {}
        VisibilityConfig:
          SampledRequestsEnabled: true
          CloudWatchMetricsEnabled: true
          MetricName: Waf-WebACL1
        Rules:
          - Name: IPlistRuleIPv4
            Priority: 0
            Action:
              Allow: {}
            VisibilityConfig:
              SampledRequestsEnabled: true
              CloudWatchMetricsEnabled: true
              MetricName: IPlistRuleIPv4Metric
            Statement:
              IPSetReferenceStatement:
                Arn: !GetAtt WafIpSet.Arn
